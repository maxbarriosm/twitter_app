<div class="card">
  <div class="card-header">
    <%= tweet.user.full_name %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= tweet.body %></p>
      <footer class="blockquote-footer"><%= tweet.creation_date %></footer>
      <%= link_to 'View', tweet, class: 'btn btn-primary mr-2' %>
      <%= button_to 'Delete', tweet, method: :delete, data: { confirm: 'Are you sure you want to delete this tweet?' }, class: 'btn btn-danger' %>
    </blockquote>
  </div>
</div>

